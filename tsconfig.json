{
    "compilerOptions": {
        "moduleResolution": "Node",
        "module": "commonjs",
        "lib": ["ESNext", "dom"],
        "strict": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "removeComments": true,
        "sourceMap": true,
        "importHelpers": true,
        "esModuleInterop": true,
        "declaration": true,
        "declarationDir": "./lib",
        "outDir": "./lib",
        "skipLibCheck": true,
        "typeRoots": ["node_modules/@types", "src/types"]
    },
    "include": ["src"],
    "exclude": ["node_modules/**"]
}
